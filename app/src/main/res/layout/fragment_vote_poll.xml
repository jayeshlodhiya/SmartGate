<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VotePollFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/pollqueId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"

        android:gravity="center"
        android:text="@string/hello_blank_fragment" />
    <RelativeLayout
        android:layout_below="@+id/pollqueId"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:visibility="gone"
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
           android:layout_marginTop="80dp"
            android:layout_below="@+id/spinner2"
            android:id="@+id/my_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/gray"
            android:elevation="5dp"

            android:orientation="vertical">

        </LinearLayout>

        <Button
            android:id="@+id/subButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_layout"
            android:layout_centerInParent="true"
            android:layout_marginTop="70dp"
            android:background="@color/colorPrimary"
            android:text="Submit"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/subButtonId"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Thank you for voting Now you can see result by clicking the below button" />

        <Button
            android:id="@+id/resButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_layout"
            android:layout_centerInParent="true"
            android:layout_marginTop="124dp"
            android:background="@color/colorPrimary"
            android:text="Result"
            android:textColor="@color/white" />


    </RelativeLayout>



</RelativeLayout>