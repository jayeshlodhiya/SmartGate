<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.payphi.visitorsregister.ProfieCompleteActivity">

    <RelativeLayout
        android:id="@+id/headerid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        android:orientation="horizontal"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pprofileImage"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/pnameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="15dp"

            android:gravity="center"

            android:text=" Name"
            android:textAllCaps="true"

            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/pemailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pnameId"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Email"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

    <EditText
        android:id="@+id/commobileId"
        android:background="@drawable/rounded_edittext"
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        android:layout_below="@+id/comflatId"
        android:layout_margin="10dp"
        android:hint="Mobile Number"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:textSize="17sp"
        android:ems="10"></EditText>

    <ImageView
        android:id="@+id/scansecuritycodeId"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/commobileId"
        android:background="@drawable/scansecuritycode" />

    <TextView
        android:id="@+id/welcomeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/teal_a700"
        android:padding="15dp"

        android:textSize="30dp"
        android:layout_centerInParent="true" />


    <EditText
        android:id="@+id/comflatId"
        android:background="@drawable/rounded_edittext"
        android:layout_width="fill_parent"
        android:layout_margin="10dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/headerid"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:hint="Flat Number"
        android:inputType="text"
        android:textSize="17sp"
        android:ems="10"></EditText>

    <TextView
        android:id="@+id/txtid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scansecuritycodeId"
        android:layout_centerInParent="true"
        android:text="Click image to scan" />

    <Button
        android:id="@+id/com_button_scan"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="95dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@+id/scansecuritycodeId"
        android:text="Click to Proceed"
        android:onClick="onbuttonProceedClick"
        android:textColor="#fff"


        tools:ignore="OnClick" />

</RelativeLayout>
