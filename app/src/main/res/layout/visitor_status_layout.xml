<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/regheaderId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:elevation="5dp"

        android:background="@color/colorPrimary"
        android:orientation="horizontal"

        tools:ignore="MissingConstraints">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VISITOR STATUS"
            android:gravity="center"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:layout_marginLeft="120dp"
            android:layout_gravity="center" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">


        <ImageView

            android:id="@+id/visitorstatImageId"
            android:layout_width="200dp"
            android:background="@drawable/waiticon1"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_height="200dp">

        </ImageView>
        <TextView
            android:layout_below="@+id/visitorstatImageId"
            android:id="@+id/statusId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting.."
            android:textAllCaps="true"
            android:textColor="@color/orange"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginLeft="5dp" />

        <Button
            android:id="@+id/okId"
            android:visibility="gone"
          android:layout_below="@+id/statusId"
          android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:text="OK"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_height="70dp">

        </Button>

    </RelativeLayout>


</RelativeLayout>