<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/headerId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp"

        android:background="@color/green">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"

            android:layout_centerInParent="true"
            android:text="I am ?"
            android:id="@+id/textView2" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/optionId"
        android:layout_below="@+id/headerId">

        <RadioGroup
            android:id="@+id/roleradioGrpid"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:button="@drawable/sg1"
                android:id="@+id/radiosecurityId"
                android:layout_width="wrap_content"
                android:tag="security"
                android:textSize="12dp"
                android:text="Security"
                android:layout_margin="20dp"
                android:layout_height="wrap_content" />

            <RadioButton
                android:tag="resident"
                android:text="Resident"
                android:textSize="12dp"
                android:button="@drawable/residenticon"
                android:id="@+id/radiresdentId"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RadioGroup>

    </RelativeLayout>

    <Button
        android:id="@+id/okId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:background="@drawable/rounded_button_settings"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/optionId"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
