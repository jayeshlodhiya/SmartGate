<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:id="@+id/detals"
       android:layout_alignParentRight="true"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/vendorImageid"
           android:layout_width="100dp"
           android:layout_height="100dp"

           android:background="@drawable/ajay"
           />

       <TextView
           android:id="@+id/inid"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="IN : "
       android:layout_marginLeft="5dp"
           android:textSize="20dp"
           android:layout_alignParentTop="true"
           android:layout_toRightOf="@+id/vendorImageid"
           android:layout_toEndOf="@+id/vendorImageid" />
       <TextView
           android:id="@+id/inttimeid"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="15dp"
           android:textStyle="italic"
           android:text="10-04-2018 32:323:22"
           android:layout_alignParentTop="true"
           android:layout_alignLeft="@+id/vouttimeId"
           android:layout_alignStart="@+id/vouttimeId" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="OUT : "
           android:textSize="20dp"
           android:id="@+id/textView7"
           android:layout_centerVertical="true"
           android:layout_alignLeft="@+id/inid"
           android:layout_alignStart="@+id/inid" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="15dp"
           android:textStyle="italic"
           android:text="10-04-2018 32:323:22"
           android:id="@+id/vouttimeId"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@+id/textView7"
           android:layout_toEndOf="@+id/textView7" />
   </RelativeLayout>


    <RelativeLayout
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionId"
        android:layout_below="@+id/detals"
        >

        <Button
            android:id="@+id/voutId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OUT"
            android:gravity="center"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="56dp"
            android:layout_marginEnd="56dp" />

        <Button
            android:id="@+id/vinId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IN"
            android:gravity="center"
            android:layout_marginLeft="70dp"

           />

    </RelativeLayout>

</RelativeLayout>
