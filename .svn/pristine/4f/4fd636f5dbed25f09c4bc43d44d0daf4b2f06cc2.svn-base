<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/headermsgId"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp"

        android:background="@color/green">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:background="@drawable/rightcheck"
            android:layout_marginLeft="117dp"
            android:layout_above="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginStart="117dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"

            android:layout_centerInParent="true"
            android:text="Invitation Generated Successfully"
            android:id="@+id/textView2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/headermsgId">

        <TextView
            android:id="@+id/instId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Invitation"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/timgId"
            android:layout_width="200dp"
            android:layout_height="190dp"
            android:layout_centerInParent="true"
            android:elevation="10dp"
            android:layout_marginTop="50dp" />

        <ImageView
            android:id="@+id/shareId"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/share"
            android:layout_below="@+id/timgId"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
